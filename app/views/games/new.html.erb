
<h1> NEW GAME </h1>
  <ol>
  <% @letters.each do |letter| %>
    <div class="card">
   <li class= "letter"> <%= letter %> </li>
    </div>
    <% end %>
  </ol>

  <form action="/score" method="post">
    <label for="word"> What is the longest word you can find? </label>
    <input class="champs" type="text" name="word" placeholder="put your word here!">
    <input class="btn" type="submit" value="Play!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>

<p>Find me in app/views/games/new.html.erb</p>

